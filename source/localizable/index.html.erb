<div class="content">
  <div class="socials container">
    <ul class="socials-list">
      <li><i class="fab fa-twitter"></i></li>
      <li><i class="fab fa-github"></i></li>
      <li><i class="fab fa-instagram"></i></li>
    </ul>
  </div>
  <div class="inner-content">
    <div class="container">
      <h1 class="col-md-12"><%= t(:hello) %></h1>
      <div class="col-md-6 content-intro">
        <%= t(:intro) %>
        <ul class="content-skills">
          <li><i class="fab fa-html5"></i></li>
          <li><i class="fab fa-css3-alt"></i></li>
          <li><i class="fab fa-sass"></i></li>
          <li><i class="fab fa-js-square"></i></li>
          <li><i class="fab fa-react"></i></li>
          <li><i class="fab fa-angular"></i></li>
        </ul>
        <a href="" class="button"><%= t('content.download') %></a>
      </div>
      <div class="col-md-12 content-intro-lang">
        <%= t(
            'intro_lang',
              french:  link_to(t('intro_fr'), '/fr'),
              english: link_to(t('intro_en'), '../')
          ).html_safe %>
      </div>
      <div class="col-md-12 content-intro-arrow"><i class="fas fa-caret-down"></i></div>
    </div>
  </div>
</div>