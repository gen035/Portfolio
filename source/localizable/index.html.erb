      <h1 class="col-md-12"><%= t(:hello) %></h1>
      <div class="col-lg-6 content-intro">
        <p class="content-intro-copy">
          <!--<%= t(:intro) %>-->
          <%= t(
            'intro',
              job: link_to('Ubisoft', 'https://ubisoft.com/', target: "_blank", data: { track: "", category: "External", track_action: "click", track_label: "Ubi" })
          ) %>
        </p>
        <div class="content-location">
          <i class="fas fa-map-marker-alt"></i>
          Montreal, Canada
        </div>
        <ul class="content-skills">
          <li><i class="fab fa-html5"></i></li>
          <li><i class="fab fa-css3-alt"></i></li>
          <li><i class="fab fa-sass"></i></li>
          <li><i class="fab fa-js-square"></i></li>
          <li><i class="fab fa-react"></i></li>
          <li><i class="fab fa-angular"></i></li>
          <li><i class="fab fa-vuejs"></i></li>
        </ul>
        <a href="../assets/<%= lang %>/genevieve_perron_migneron.pdf" class="button" target="_blank"><%= t('content.download') %></a>
      </div>
      <div class="col-md-12 content-intro-lang">
        <%= t(
            'intro_lang',
              french:  link_to(t('intro_fr'), 'http://www.gen-migneron.com/fr', data: { track: "", category: "langSwitch", track_action: "click", track_label: "French" }),
              english: link_to(t('intro_en'), 'http://www.gen-migneron.com', data: { track: "", category: "langSwitch", track_action: "click", track_label: "English" })
          ).html_safe %>
      </div>
    </div>
  </div>
  <div class="contact-me">
    <a class="button" href="mailto:info@gen-migneron.com"><%= t('contact') %></a>
  </div>
</div>
